{# \src\PMM\CoreBundle\Resources\views\layout.html.twig
Le layout general de la plateforme (couche 1) #}

<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		
		<title>{% block title %}PMM Application{% endblock %}</title>
		
		{% block stylesheets %}
			<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
		{% endblock %}
	</head>
	
	<body>
		<div class="container">
			<div id="header" class="jumbotron">
				<h1>{% block title2 %} - mPm Group Intl{% endblock %}</h1>
				<p>
					Projet realise avec le framework SYMFONY3 par PLATA
				</p>
				<p>
					<a class="btn btn-primary bnt-lg" href="https://openclassrooms.com/courses/developpez-
					votre-site-web-avec-le-framework-symfony">
					Participer au MOOC >>					
					</a>
				</p>
			</div>
			
			<div class="row">
				<div id="menu" class="col-md-3">
					<h3>Aller a la page...</h3>
					<ul class="nav nav-pills nav-stacked">
						<li><a href="{{ path('pmm_home')}}">Accueil</a></li>
						<li><a href="{{ path('pmm_platform_add')}}">Ajouter une annonce</a></li>
						<li><a href="{{ path('pmm_platform_home')}}">Toutes les annonces</a></li>
						<li><a href="{{ path('pmm_contact')}}">Nous contacter</a></li>
					</ul>
					
				<h3>Les dernieres annonces</h3>			
				{{ render(controller("PMMPlatformBundle:Advert:menu", {'limit': 3})) }}

				</div>
				<div id="content" class="col-md-9">
					{% block body %}
					{% endblock %}
				</div>
			</div>
			
			<hr>
			
			<footer>
				<p>By Plata for the mPm Group Intl on the date {{ 'now'|date() }} . </p>
			</footer>
		</div>
		
		{% block javascripts %}
			<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
			<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
		{% endblock %}
	</body>
</html>